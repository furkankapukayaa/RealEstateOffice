@model List<RealEstateOffice.Models.Advert>

@{
    ViewBag.Title = "AdvertList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>İlanlar</h2>
    @using (Html.BeginForm())
    {
    @Html.TextBox("SearchName", "Ara", new { @class = "form-control center-block" })
    <br />
    <input type="submit" value="Arama Yap" class="btn btn-info" />
    <br />  <br />
    }
</div>

@foreach (var item in Model)
{
<div class="col-sm-6">
    <div class="thumbnail">
        <img src="https://egitimgrafik.com/wp-content/uploads/2021/02/ev.png" width="100px">
        <div class="caption">
            <h3>@item.advert_name</h3>
            <p>İlan Oda Sayısı : @item.number_of_rooms | İlan Bina Yaşı : @item.residance_age | İlan Metrekaresi : @item.square_meters m<sup>2</sup> | @item.category | İlan Fiyatı : @item.price ₺</p>
            <p><a href="/Home/AdvertDetail/@item.advert_id" class="btn btn-primary">Detaylar...</a></p>
        </div>
    </div>
</div>
}